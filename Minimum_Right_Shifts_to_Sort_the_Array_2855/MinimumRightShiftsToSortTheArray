package Minimum_Right_Shifts_to_Sort_the_Array_2855;

import java.util.*;

public class MinimumRightShiftsToSortTheArray {

    public int minimumRightShifts(List<Integer> nums) {
        int n = nums.size();
        int count = 0;
        int index = -1;

        for (int i = 0; i < n; i++) {
            if (nums.get(i) > nums.get((i + 1) % n)) {
                count++;
                index = i;
            }
        }

        if (count == 0) return 0;
        if (count == 1) return n - index - 1;

        return -1;
    }

    public static void main(String[] args) {
        MinimumRightShiftsToSortTheArray obj = new MinimumRightShiftsToSortTheArray();

        List<Integer> nums = Arrays.asList(3, 4, 5, 1, 2);
        int result = obj.minimumRightShifts(nums);

        System.out.println("Minimum Right Shifts: " + result);
    }
}
